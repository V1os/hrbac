{
  "name": "hrbac",
  "version": "1.2.0",
  "description": "Hierarchical Role Based Access Control",
  "keywords": [
    "role",
    "permission",
    "access",
    "RBAC",
    "hierarchical",
    "privacy"
  ],
  "private": false,
  "license": "MIT",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "typings": "./build/index.d.ts",
  "exports": {
    ".": {
      "require": "./build/index.js",
      "import": "./build/index.js",
      "types": "./build/index.d.ts",
      "typings": "./build/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "/build",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">= 16.19.0"
  },
  "scripts": {
    "build": "node ./builder",
    "lint:check": "eslint \"src/**/*.ts\" --cache",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "pretty:check": "pretty-quick --pattern 'src/**/*.ts' --staged",
    "lint:fix": "yarn run pretty-quick && yarn run lint --fix",
    "ts:check": "tsc -p ./tsconfig.json --noEmit",
    "ci:check": "yarn ts:check && yarn lint:check && yarn prettier-format",
    "test": "jest ./src/ --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage ./src/",
    "test:watch": "jest --watch ./src/",
    "git-add": "git add ."
  },
  "peerDependencies": {
    "mongoose": "*"
  },
  "dependencies": {
    "dayjs": "1.11.10",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@babel/core": "7.23.2",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-decorators": "7.23.2",
    "@babel/preset-env": "7.23.2",
    "@babel/preset-typescript": "7.23.2",
    "@esbuild-plugins/tsconfig-paths": "0.1.2",
    "@types/jest": "29.5.5",
    "@types/lodash": "4.14.199",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "babel-jest": "29.7.0",
    "babel-loader": "9.1.3",
    "esbuild": "0.19.4",
    "esbuild-node-externals": "1.9.0",
    "esbuild-plugin-d.ts": "1.1.0",
    "esbuild-plugin-tsc": "0.4.0",
    "eslint": "8.51.0",
    "eslint-config-node": "4.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-jest": "27.4.2",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.7.0",
    "jsdoc": "4.0.2",
    "pre-commit": "1.2.2",
    "prettier": "3.0.3",
    "pretty-quick": "3.1.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      ".+\\.(ts|tsx)$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "node_modules"
    ]
  },
  "pre-commit": {
    "run": [
      "lint:check",
      "ts:check",
      "git-add"
    ]
  }
}
